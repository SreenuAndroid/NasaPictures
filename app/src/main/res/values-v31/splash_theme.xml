<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splashColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_nasa</item>
        <item name="windowSplashScreenAnimationDuration">@integer/splash_duration</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>

        <item name="android:statusBarColor">@color/splashColor</item>
        <item name="android:navigationBarColor">@color/splashColor</item>

        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_logo_nasa</item>
    </style>
</resources>